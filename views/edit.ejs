    <form action="/edit" method="post" class="flex editData" >
          <label for="Name">Name </label>
          <input type="text" name="Name" value=<%=user.name%> id="Name" required>
          <label for="date">Date of Birth</label>
          <input type="date" value=<%=new Date(user.dob).toISOString().split('T')[0] %> name="dob" id="date">
          <label for="city">City </label>
          <input type="text" name="city" value=<%=user.city%> id="city">

            <label for="weight">Weight (kg)</label>
            <input type="number" name="weight" value="<%= user.weight %>" id="weight">

            <label for="height">Height (cm)</label>
            <input type="number" name="height" value="<%= user.height %>" id="height">

            <label for="isDiabetic">Is Diabetic?</label>
            <input type="checkbox" name="isDiabetic" <%= user.isDiabetic ? 'checked' : '' %> id="isDiabetic">

            <label for="bloodGroup">Blood Group</label>
            <input type="text" name="bloodGroup" value="<%= user.bloodGroup %>" id="bloodGroup">

            <label for="diseases">Diseases</label>
            <input type="text" name="diseases" value="<%= user.diseases.join(', ') %>" id="diseases">

            <label for="otherComments">Other Comments</label>
            <textarea name="otherComments" id="otherComments" rows="4"><%= user.otherComments.join(',') %></textarea>
          <button type="submit" class="disabled-field">Submit</button>
    </form>
